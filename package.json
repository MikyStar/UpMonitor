{
  "name": "up-monitor",
  "version": "1.1.0",
  "description": "Simple server running CRON jobs to ping endpoints and alert the down ones on endpoints",
  "author": "Mike AUBENAS",
  "license": "ISC",
  "main": "src/Main.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/MikyStar/UpMonitor"
  },
  "scripts": {
    "start": "wds src/Main.ts",
    "dev": "wds --watch -c src/Main.ts",

    "daemon:start": "pm2 start --name up-monitor --log up-monitor.log --interpreter $(which pnpm) --interpreter-args start --cron '0 */12 * * *' src/Main.ts",
    "daemon:stop": "pm2 stop up-monitor",
    "daemon:resume": "pm2 restart up-monitor",
    "daemon:delete": "pm2 delete up-monitor",
    "daemon:logs": "pm2 logs up-monitor",
    "daemon:infos": "pm2 monitor up-monitor",


    "security:audit": "npm audit --production --audit-level=moderate --registry=https://registry.npmjs.org",
    "security:fix": "npm audit fix --production --audit-level=moderate --registry=https://registry.npmjs.org",

    "dependencies:check": "ncu -e 2",
    "dependencies:update": "ncu -u && npm run clear && npm install && npm run security:audit",

    "lint": "eslint src --ext .ts --fix",
    "clear": "rm -rf node_modules"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.48.1",
    "@typescript-eslint/parser": "5.48.1",
    "eslint": "8.31.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-import": "2.27.4",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-simple-import-sort": "8.0.0",
    "prettier": "2.8.2",
    "tslint": "^5.20.1",
    "typescript": "^4.6.3",
    "wds": "^0.13.2"
  },
  "dependencies": {
    "@types/cron": "^2.0.0",
    "@types/prompts": "^2.0.14",
    "cron": "^2.2.0",
    "discord.js": "^14.1.2",
    "dotenv": "^16.0.0",
    "moment": "^2.29.3"
  }
}
